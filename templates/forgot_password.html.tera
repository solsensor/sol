{% extends "base" %}
{% block body %}
<section class="section">
  <div class="container">

	<p class="title">Forgot Password</p>

	<div class="box">
	  <form action="/forgot_password" method="post">
	  <div class="field">
		<label class="label">Email</label>
		<div class="control">
		  <input class="input" type="text" name="email" placeholder="email">
		</div>
	  </div>

	  <div class="field">
		<div class="control">
		  <input class="button is-primary has-text-weight-bold" type="submit" value="Continue">
		</div>
	  </div>
	  </form>
	</div>

  </div>
</section>
{% endblock body %}
